@model TaskChecker.Web.Models.Entities.LabWork

@{
    ViewBag.Title = "Lab Work";
    Layout = "../Shared/_Layout.cshtml";
}

<h2>Details</h2>

<div>
    <h4>LabWork</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.IsOpened)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.IsOpened)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.DueDate)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DueDate)
        </dd>

    </dl>
</div>

<p>
    @Html.ActionLink("Back to Class", "Index", "Home")
</p>
<h4>Exercises in this lab work</h4>

<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Description")
        </th>
        <th>
            @Html.DisplayName("Value")
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.Exercises) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Value)
            </td>
            <td>
                @Html.ActionLink("Details", "Exercise", "Home", new { id = item.Id }, null)
            </td>
        </tr>
    }

</table>
